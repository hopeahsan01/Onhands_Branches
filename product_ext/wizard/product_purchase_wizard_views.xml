<odoo>
    <record id="view_product_purchase_wizard_form" model="ir.ui.view">
        <field name="name">product.purchase.wizard.form</field>
        <field name="model">product.purchase.wizard</field>
        <field name="arch" type="xml">
            <form string="Product Purchase">
                <group>
                    <field name="product_id" readonly="1"/>
                    <field name="vendor_id"/>
                </group>
                <footer>
                    <button string="Create Purchase Order" type="object" name="create_purchase_order" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
